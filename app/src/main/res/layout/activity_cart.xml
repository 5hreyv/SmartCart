<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:text="Your Cart"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cartRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toTopOf="@id/summaryCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Empty Cart State -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/summaryCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/emptyCartAnimation"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_rawRes="@raw/empty_cart"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_speed="1.0" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your cart is empty"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginTop="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add items to get started"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/browseProductsBtn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Browse Products"
            android:layout_marginTop="20dp" />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/summaryCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="22dp">

            <!-- Subtotal -->
            <TextView
                android:id="@+id/subtotal"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:text="Subtotal"
                android:textSize="15sp"
                android:textColor="@color/text_secondary"/>

            <!-- Tax -->
            <TextView
                android:id="@+id/tax"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:text="Tax"
                android:textSize="15sp"
                android:textColor="@color/text_secondary"/>

            <!-- Coupon -->
            <TextView
                android:id="@+id/coupon"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:text="Coupon Applied"
                android:textSize="15sp"
                android:textColor="@color/success"/>
            <!-- Apply / Remove Coupon Button -->
            <Button
                android:id="@+id/applyCouponBtn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:text="Apply Coupon"
                android:textSize="14sp"
                android:textColor="@color/on_coupon"
                android:backgroundTint="@color/coupon_orange" />


            <!-- Coupon Message -->
            <TextView
                android:id="@+id/couponMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Coupon not applied"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />


            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="14dp"
                android:background="@color/divider"/>

            <!-- Final Amount -->
            <TextView
                android:id="@+id/finalAmount"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Total"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <!-- Coupon Info -->
            <TextView
                android:id="@+id/couponInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Coupon not applicable on discounted items"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"/>

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="18dp"/>

            <!-- Checkout Button -->
            <Button
                android:id="@+id/checkoutBtn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Proceed to Checkout"
                android:textSize="16sp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>
